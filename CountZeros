#include <bits/stdc++.h>
using namespace std;

int sum=0;
void ans(int n,int cnt){
    if(n == 0){
        cout<<cnt;
        return;
    }
    if(n%10==0){
        cnt++;
    }
    ans(n/10, cnt);
    
}

int main() {
    int n;
    cin >> n;
    ans(n,0);
}


---------------------------------------------------------------------------

#include <bits/stdc++.h>
using namespace std;

int helper(int n, int cnt){
    if(n==0){
        return cnt;
    }
    if(n%10==0){
        return helper(n/10, cnt+1);
    }
    return helper(n/10, cnt);
}
int  count(int n){
   
   return helper(n,0);
    
}

int main() {
    int n;
    cin >> n;
    cout<<count(n);
}

